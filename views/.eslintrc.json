{
  "parser": "babel-eslint",
  "extends": "eslint:recommended",
  "root": true,
  "parserOptions": {
    "ecmaVersion": 6
  },
  "rules": {
    "no-var": "error",
    "no-undef": [ "error", {
      "typeof": true
    } ],
    "no-console": "off",
    "valid-jsdoc": [ "error", {
      "requireReturn": false,
      "prefer": {
        "arg": "param",
        "argument": "param",
        "returns": "return"
      },
      "preferType": {
        "Boolean": "boolean",
        "Number": "number",
        "String": "string",
        "object": "Object",
        "function": "Function"
      }
    } ]
  },
  "env": {
    "browser": true,
    "es6": true
  },
  "plugins": [ "html" ],
  "globals": {
    "customElements": true,
    "HTMLImports": true,
    "Polymer": true,
    "ShadyDOM": true,
    "ShadyCSS": true,
    "JSCompiler_renameProperty": true,
    "WorkerGlobalScope": true,
    "importScripts": true,
    "ClientDatabase": true,
    "ClientCache": true,
    "Store": true,
    "d3": true,
    "io": true,
    "idb": true,
    "Webvisual": true,
    "WebvisualMixins": true,
    "module": true
  }
}
